# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# App Metadata (configurable)
APP_NAME=PluginMind Backend API (Dev)
APP_VERSION=1.4.0-dev

# Environment Settings
DEBUG=true
LOG_LEVEL=DEBUG

# CORS Configuration (comma-separated domains)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Database Configuration
DATABASE_URL=sqlite:///./pluginmind_dev.db

# ==========================================
# MODEL & API CONFIGURATION
# ==========================================

# OpenAI Configuration (configurable)
OPENAI_MODEL=gpt-4
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Grok Configuration (configurable)
GROK_MODEL=grok-beta
GROK_API_URL=https://api.x.ai/v1/chat/completions

# ==========================================
# RATE LIMITS & REQUEST LOGIC
# ==========================================

# User Input & Request Limits
MAX_USER_INPUT_LENGTH=500
JOB_CLEANUP_HOURS=1
BODY_MAX_BYTES=1000000

# Global Rate Limiting (relaxed for development)
RATE_LIMIT_PER_MIN=300
RATE_LIMIT_BURST=600

# IP-specific Rate Limiting (relaxed for development)
RATE_LIMIT_IP_PER_MIN=600
RATE_LIMIT_IP_BURST=1200

# ==========================================
# HTTP CLIENT CONFIGURATION
# ==========================================

# Connection Pool Settings
HTTP_MAX_CONNECTIONS=50
HTTP_MAX_KEEPALIVE=10

# Global Timeout Settings (faster for development)
HTTP_TIMEOUT_SECONDS=60

# Retry Configuration
HTTP_MAX_RETRIES=1
HTTP_RETRY_BACKOFF_BASE=0.5

# Grok-Specific Granular Timeouts (faster for development)
GROK_TIMEOUT_SECONDS=120
GROK_CONNECT_TIMEOUT=10.0
GROK_WRITE_TIMEOUT=30.0
GROK_POOL_TIMEOUT=5.0

# ==========================================
# PRODUCTION CONFIGURATION
# ==========================================

# Production Runner Settings (Not used in development)
GUNICORN_TIMEOUT=300
GUNICORN_GRACEFUL_TIMEOUT=60
GUNICORN_KEEPALIVE=5

# ==========================================
# TESTING CONFIGURATION
# ==========================================

# Set to "1" for testing mode (provides safe defaults)
TESTING=0