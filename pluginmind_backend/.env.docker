# ==========================================
# SECRET KEYS & API CREDENTIALS
# ==========================================

# OpenAI API Key (Required)
OPENAI_API_KEY=your-openai-api-key-here

# Grok API Key (Required)
GROK_API_KEY=your-grok-api-key-here

# Supabase Configuration (Optional for Docker)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE=

# JWT Configuration (Required)
JWT_SECRET=your-base64-encoded-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# Google OAuth Configuration (Required)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Backend Session Management (separate from JWT_SECRET for security)
BACKEND_SESSION_SECRET=generate-32-char-random-string

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# App Metadata (configurable)
APP_NAME=PluginMind Backend API
APP_VERSION=1.4.0

# Environment Settings
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration (comma-separated domains)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database Configuration (Docker PostgreSQL)
DATABASE_URL=postgresql://pluginmind:pluginmind@postgres:5432/pluginmind_db
POSTGRES_DB=pluginmind_db
POSTGRES_USER=pluginmind
POSTGRES_PASSWORD=pluginmind
POSTGRES_PORT=5432

# ==========================================
# MODEL & API CONFIGURATION
# ==========================================

# OpenAI Configuration (configurable)
OPENAI_MODEL=gpt-4
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Grok Configuration (configurable)
GROK_MODEL=grok-beta
GROK_API_URL=https://api.x.ai/v1/chat/completions

# ==========================================
# RATE LIMITS & REQUEST LOGIC
# ==========================================

# User Input & Request Limits
MAX_USER_INPUT_LENGTH=500
JOB_CLEANUP_HOURS=1
BODY_MAX_BYTES=1000000

# Global Rate Limiting
RATE_LIMIT_PER_MIN=60
RATE_LIMIT_BURST=120

# IP-specific Rate Limiting
RATE_LIMIT_IP_PER_MIN=300
RATE_LIMIT_IP_BURST=600

# ==========================================
# HTTP CLIENT CONFIGURATION
# ==========================================

# Connection Pool Settings
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_KEEPALIVE=10

# Global Timeout Settings
HTTP_TIMEOUT_SECONDS=120

# Retry Configuration
HTTP_MAX_RETRIES=1
HTTP_RETRY_BACKOFF_BASE=0.5

# Grok-Specific Granular Timeouts
GROK_TIMEOUT_SECONDS=200
GROK_CONNECT_TIMEOUT=10.0
GROK_WRITE_TIMEOUT=30.0
GROK_POOL_TIMEOUT=5.0

# ==========================================
# DOCKER CONFIGURATION
# ==========================================

# Docker-specific settings
DOCKER_TARGET=development
SOURCE_MOUNT=./:/app
MOUNT_OPTIONS=delegated
RESTART_POLICY=unless-stopped
BACKEND_PORT=8000
HEALTH_ENDPOINT=health

# Redis Configuration
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb

# ==========================================
# PRODUCTION CONFIGURATION
# ==========================================

# Production Runner Settings (Gunicorn)
WEB_CONCURRENCY=4
GUNICORN_TIMEOUT=300
GUNICORN_GRACEFUL_TIMEOUT=60
GUNICORN_KEEPALIVE=5

# Nginx Configuration (Production)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
SSL_CERT_PATH=./nginx/ssl

# ==========================================
# TESTING CONFIGURATION
# ==========================================

# Set to "0" for Docker environment
TESTING=0