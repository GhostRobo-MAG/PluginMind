# PluginMind Backend (.env.example)
# Copy this to .env and fill in your actual values

# Mode
DEBUG=false
TESTING=1  # Enable safe defaults for local tests without real AI keys

# Database
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@host:5432/pluginmind
# Or SQLite for local dev:
DATABASE_URL=sqlite:///./pluginmind.db

# Google OAuth (Required)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Backend Session Management
BACKEND_SESSION_SECRET=generate-32-char-random-string

# JWT Configuration
JWT_SECRET=generate-base64-encoded-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# CORS (comma-separated list)
CORS_ORIGINS=https://your-frontend-domain.com

# AI Services (optional for auth-only deployments)
# OPENAI_API_KEY=sk-...
# GROK_API_KEY=xai-...

# Supabase (optional)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-supabase-anon-key
# SUPABASE_SERVICE_ROLE=your-supabase-service-role-key

# App Configuration
APP_NAME=PluginMind Backend API
APP_VERSION=1.4.0
LOG_LEVEL=INFO

# Model Configuration
OPENAI_MODEL=gpt-4
GROK_MODEL=grok-beta

# Rate Limiting
RATE_LIMIT_PER_MIN=60
RATE_LIMIT_BURST=120

# HTTP Configuration
HTTP_TIMEOUT_SECONDS=120
HTTP_MAX_RETRIES=1
HTTP_RETRY_BACKOFF_BASE=0.5