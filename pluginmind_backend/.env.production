# ==========================================
# SECRET KEYS & API CREDENTIALS
# ==========================================

# OpenAI API Key (Required) - Set via deployment environment
OPENAI_API_KEY=

# Grok API Key (Required) - Set via deployment environment
GROK_API_KEY=

# Supabase Configuration (Required) - Set via deployment environment
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE=

# JWT Configuration (Required) - Set via deployment environment
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Google OAuth Configuration (Required) - Set via deployment environment
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Backend Session Management (separate from JWT_SECRET for security)
BACKEND_SESSION_SECRET=

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# App Metadata (configurable)
APP_NAME=PluginMind Backend API
APP_VERSION=1.4.0

# Environment Settings
DEBUG=false
LOG_LEVEL=WARNING

# CORS Configuration (comma-separated domains) - Set via deployment environment
CORS_ORIGINS=

# Database Configuration - Set via deployment environment
DATABASE_URL=

# ==========================================
# MODEL & API CONFIGURATION
# ==========================================

# OpenAI Configuration (configurable)
OPENAI_MODEL=gpt-4
OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# Grok Configuration (configurable)
GROK_MODEL=grok-beta
GROK_API_URL=https://api.x.ai/v1/chat/completions

# ==========================================
# RATE LIMITS & REQUEST LOGIC
# ==========================================

# User Input & Request Limits
MAX_USER_INPUT_LENGTH=500
JOB_CLEANUP_HOURS=1
BODY_MAX_BYTES=1000000

# Global Rate Limiting (production limits)
RATE_LIMIT_PER_MIN=120
RATE_LIMIT_BURST=240

# IP-specific Rate Limiting (production limits)
RATE_LIMIT_IP_PER_MIN=300
RATE_LIMIT_IP_BURST=600

# ==========================================
# HTTP CLIENT CONFIGURATION
# ==========================================

# Connection Pool Settings
HTTP_MAX_CONNECTIONS=200
HTTP_MAX_KEEPALIVE=20

# Global Timeout Settings (production timeouts)
HTTP_TIMEOUT_SECONDS=180

# Retry Configuration
HTTP_MAX_RETRIES=2
HTTP_RETRY_BACKOFF_BASE=1.0

# Grok-Specific Granular Timeouts (production timeouts)
GROK_TIMEOUT_SECONDS=300
GROK_CONNECT_TIMEOUT=15.0
GROK_WRITE_TIMEOUT=60.0
GROK_POOL_TIMEOUT=10.0

# ==========================================
# PRODUCTION CONFIGURATION
# ==========================================

# Production Runner Settings (Gunicorn)
GUNICORN_TIMEOUT=600
GUNICORN_GRACEFUL_TIMEOUT=120
GUNICORN_KEEPALIVE=10

# ==========================================
# TESTING CONFIGURATION
# ==========================================

# Set to "0" for production (no safe defaults)
TESTING=0